{% extends "_base_page.twig" %}
{% block header %}
{% endblock %}
{% block content %}

<div class="wrapper {{sidebar_class}}">
    <!-- Aide à la navigation -->
    <div class="content-wrapper _bg_white" id="_pg_club-energy">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb _bredcrumb_custo">
                    <li class="breadcrumb-item"><a class="a-navig" href="{{ site.url }}">Accueil</a></li>
                    <li class="breadcrumb-item active"><strong>{{post.title}}</strong></li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Aide à la navigation -->
    <div class="container content-wrapper _pd_tp_50 _pd_bt_50">
        <div class="row">
            <div class="col-md-6 class_club_energy">
                {% if  post.get_field('premier_titre') %}
                    <h2 class="text-uppercase  services-h2">
                        {{post.get_field('premier_titre')}}
                    </h2>
                {% endif %}
                {% if  post.get_field('premier_contenu') %}
                    {{post.get_field('premier_contenu')}}
                {% endif %}
                <p class="text-center _pd_tp_40">
                    {% set p_url = post.get_field('premier_url_savoir_plus') %}
                    <a href="{% if p_url.url %}{{p_url.url}}{% else %}#{% endif %}" class="" target="{% if p_url.target %}{{p_url.target}}{% else %}_self{% endif %}">
                        {% if post.get_field('premier_texte_savoir_plus') %}
                            <button class="btn btn-secondary btn-first">
                                    {{post.get_field('premier_texte_savoir_plus')}}
                            </button>
                        {% endif %}
                    </a>
                </p>
            </div>
            <div class="col-md-6 pl_club">
                {% if  post.get_field('premier_image') %}
                    {% set img_p = post.get_field('premier_image') %}
                    <img class="img_club" src="{{img_p.url}}">
                {% endif %}
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6">
                {% if  post.get_field('deuxieme_image') %}
                    <img class="img_club" src="{{post.get_field('deuxieme_image').url}}">
                {% endif %}
            </div>
            <div class="col-md-6 pl_club class_club_energy">
                {% if  post.get_field('deuxieme_titre') %}
                    <h2 class="text-uppercase  services-h2">
                        {{post.get_field('deuxieme_titre')}}
                    </h2>
                {% endif %}
                {% if  post.get_field('deuxieme_contenu') %}
                    {{post.get_field('deuxieme_contenu')}}
                {% endif %}
                <p class="text-center _pd_tp_40">
                    {% set d_url = post.get_field('deuxieme_url_savoir_plus') %}
                    <a href="{% if d_url.url %}{{d_url.url}}{% else %}#{% endif %}" class="" target="{% if d_url.target %}{{d_url.target}}{% else %}_self{% endif %}">
                        {% if post.get_field('deuxieme_texte_savoir_plus') %}
                            <button class="btn btn-secondary btn-first">
                                {{post.get_field('deuxieme_texte_savoir_plus')}}
                            </button>
                        {% endif %}
                    </a>
                </p>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6 class_club_energy">
                {% if  post.get_field('troisieme_titre') %}
                    <h2 class="text-uppercase  services-h2">
                        {{post.get_field('troisieme_titre')}}
                    </h2>
                {% endif %}
                {% if  post.get_field('troisieme_contenu') %}
                    {{post.get_field('troisieme_contenu')}}
                {% endif %}
                <p class="text-center _pd_tp_40">
                    {% set t_url = post.get_field('troisieme_url_savoir_plus') %}
                    {% if post.get_field('troisieme_texte_savoir_plus') and t_url.url %}
                        <a href="{% if t_url.url %}{{t_url.url}}{% else %}#{% endif %}" class=""  target="{% if t_url.target %}{{t_url.target}}{% else %}_self{% endif %}">
                                <button class="btn btn-secondary btn-first ">
                                        {{post.get_field('troisieme_texte_savoir_plus')}}
                                </button>
                        </a>
                    {% endif %}
                </p>
            </div>
            <div class="col-md-6 pl_club">
                {% if  post.get_field('troisieme_image') %}
                    <img class="img_club" src="{{post.get_field('troisieme_image').url}}">
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}