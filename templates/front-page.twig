                                            {% if post.get_field('decouvrez')['second_section_faibilite'] %}
                                            {{post.get_field('decouvrez')['second_section_faibilite']}}
                                            {% else %}
                                            Fiabilité
                                            {% endif %}
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 _prquoi_bloc">
                                <div class="_bloc" style="background: #a29da9">
                                    <div class="_cnt_ico">
                                        <img src="{{site.theme.link}}/images/broom.svg" class="img-section6">
                                    </div>
                                    <div class="_cnt_bloc_title">
                                        <h3 class="_bloc_title">
                                            {% if post.get_field('decouvrez')['second_section_propriete'] %}
                                            {{post.get_field('decouvrez')['second_section_propriete']}}
                                            {% else %}
                                            Proprété
                                            {% endif %}
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 _cnt_btn">
                                <a href="{{post.get_field('decouvrez')['bouton_notre_valeur_ajoute']}}" class="_btn_lnk">Notre valeur ajoutée
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /content-wrapper -->
