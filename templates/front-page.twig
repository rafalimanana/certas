{% block content %}
<div class="wrapper {{sidebar_class}}">
    <div class="container _bg_white _pd_tp_40 _pd_bt_40" id="_reseau">
        <h1 class="_title_reseau font-family-pers"><span class="fw-l"> Notre </span> <b>réseau</b></h1>
        <div class="row _cnt_bloc">
            <div class="col-md-4">
                <div class="_bloc">
                    <div class="_bloc_ico">
                            <img src="{{ site.theme.link }}/images/_icons/_pg_home/_express.png" class="nr-reseau">
                            <img src="{{ site.theme.link }}/images/_icons/_pg_home/__express.png" class="nr-reseau-hover">
                    </div>
                    <div class="_bloc_info">
                        <h3 class="_bloc_title">
                            {% if post.get_field('reseau_express') %}
                            	{{ post.get_field('reseau_express') }}
                            {% else %}
                            	Express
                            {% endif %}
                        </h3>
                        <p class="_bloc_desc">
                            {% if post.get_field('description_express') %}
                            	{{ post.get_field('description_express') }}
                            {% else %}
                            	Prix bas toute l'année,<br>24h/24h
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="_bloc">
                    <div class="_bloc_ico">
                            <img src="{{ site.theme.link }}/images/_icons/_pg_home/_road.png" class="nr-reseau">
