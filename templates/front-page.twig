                        <p class="_bloc_desc">
                            {% if post.get_field('description_autoroute') %}
                            	{{ post.get_field('description_autoroute') }}
                            {% else %}
                            	Confort total pour les  <br> longs voyages
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="_bloc">
                    <div class="_bloc_ico">
                            <img src="{{ site.theme.link }}/images/_icons/_pg_home/_buyer.png" class="nr-reseau">
