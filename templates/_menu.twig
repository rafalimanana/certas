                </div>
            </div>
            <div class="carousel-item">
                {% set slide_image_3 = post.get_field('slide_image_3') %}
                <div class="hero-wrap ftco-degree-bg header-bg propos-header" style="background: linear-gradient(rgba(74, 45, 127, 0.8), rgba(74, 45, 127, 0.59)),url({% if slide_image_3 %}{{slide_image_3.url}}{% else %}{{site.theme.link}}/images/Slider.jpg}}{% endif %});background-size: 100% auto;background-repeat: no-repeat;" data-stellar-background-ratio="0.5">
