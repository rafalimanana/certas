{% extends "_base_page.twig" %}
{% block header %}
{% endblock %}
{% block content %}
<div class="wrapper {{sidebar_class}}" id="_pg_stations">
    <!-- Aide à la navigation -->
    <div class="content-wrapper _bg_white">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb _bredcrumb_custo">
                    <li class="breadcrumb-item"><a class="a-navig" href="{{ site.url }}">Accueil</a></li>
                    {% if post.parent.parent.title %}
                        <li class="breadcrumb-item"><a class="a-navig" href="{{ post.parent.parent.link }}">{{post.parent.parent.title}}</a></li>
                    {% endif %}
                    {% if post.parent.title %}
                        <li class="breadcrumb-item"><a class="a-navig" href="{{post.parent.link}}">{{post.parent.title}}</a></li>
                    {% endif %}
                    <li class="breadcrumb-item active"><strong>{{post.title}}</strong></li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Aide à la navigation -->

    <div class="content-wrapper _bg_white  pb-5">
        <div class="container">
            {% set nos_appel_doffres = post.get_field('nos_appel_doffres') %}
            {% if nos_appel_doffres is not empty %}
                <article class="post-type-{{post.post_type}} _pd_bt_25" id="post-{{post.ID}}">
                    <section class="_article_content">
                        <h2 class="text-uppercase  services-h2">
                            {{nos_appel_doffres.titre}}
                        </h2>
                        <div class="_article_body">
                            {{nos_appel_doffres.description}}
                        </div>
                    </section>
                </article>
            {% endif %}
            {% set carte_1 = post.get_field('carte_1') %}
            {% set carte_2 = post.get_field('carte_2') %}
            <article class="post-type-{{post.post_type}} row" id="post-{{post.ID}}">
                <section class="_article_content col-md-12">
                <input type="hidden" name="latLil" id="latLil" value="{{carte_1.latitude}}">
                <input type="hidden" name="lonLil" id="lonLil" value="{{carte_1.longitude}}">
                <input type="hidden" name="latLil" id="latLil" value="{{carte_2.latitude}}">
                <input type="hidden" name="lonLil" id="lonLil" value="{{carte_2.longitude}}">
                    <div class="row">
                        <div class="col-md-5">
                            <div id="mapidv1"  style="width:100%;"></div>
                        </div>
                        <div class="col-md-7">
                            <h5 class="t_promos"><b>STATION ESSO CELLENEUVE - MONTPELLIER</b></h5>
                            <p>
                                <img src="{{ site.theme.link }}/images/_icons/localization.svg" style="width:14px;">
                                <span class="ccm-p">57 Route de Lodeve — RN 109</span><br>
                                <span style="padding-left: 18px;" class="ccm-p">34080 Montpellier</span>
                            </p>
                            <p>
                                Ensemble immobilier sur lequel est edifie un bâtiment de 100 m2 pour une superficie totale de 2550 m2 environ. <br>
                                Le site sera demantele et rehabilite pour un usage commercial.
                            </p>
                            {# {% set voir_offre = nos_appel_doffres.voir_loffre_monpellier %}
                            <a href="{% if voir_offre.url %}{{voir_offre.url}}{% else %}#{% endif %}">
                                <button class="btn btn-secondary btn-first">
                                    Voir l'offre
                                </button>
                            </a> #}
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-md-5">
                            <div id="mapidv2"  style="width:100%;"></div>
                        </div>
                        <div class="col-md-7">
                            <h5 class="t_promos"><b>STATION ESSO MONTEBELLO - LILLE</b></h5>
                            <p>
                                <img src="{{ site.theme.link }}/images/_icons/localization.svg" style="width:14px;">
                                <span class="ccm-p">83 Boulevard Montebello </span><br>
                                <span style="padding-left: 18px;" class="ccm-p">59000 Lille</span>
                            </p>
                            <p>
                                Ensemble immobilier sur lequel est edifie deux bâtiments de 8 et 190 m2 pour une superficie totale de 3800 m2 environ. <br>
                                Le site sera de mantele et re habilite pour un usage commercial.
                            </p>
                            {# {% set voir_lille = nos_appel_doffres.voir_loffre_lille %}
                            <a href="{% if voir_lille.url %}{{voir_lille.url}}{% else %}#{% endif %}">
                                <button class="btn btn-secondary btn-first">
                                    Voir l'offre
                                </button>
                            </a> #}
                        </div>
                    </div>
                </section>
            </article>
        </div>
    </div><!-- /content-wrapper -->
    {% set comment_repondre_a_notre_appel_doffres = post.get_field('comment_repondre_a_notre_appel_doffres') %}
    {% if comment_repondre_a_notre_appel_doffres is not empty %}
        <div class="content-wrapper _bg_grey _pd_bt_50 _pd_tp_50">
            <div class="container">
                <article class="post-type-{{post.post_type}} row" id="post-{{post.ID}}">
                    <section class="_article_content col-md-12">
                        <h2 class="text-uppercase  services-h2">
                            {{comment_repondre_a_notre_appel_doffres.titre}}
                        </h2>
                        <div class="_article_body">
                            {{comment_repondre_a_notre_appel_doffres.description}}
                        </div>
                    </section>
                </article>
            </div>
        </div><!-- /content-wrapper -->
    {% endif %}
    {% set conditions_particulieres = post.get_field('conditions_particulieres') %}
    {% if conditions_particulieres is not empty %}
        <div class="content-wrapper _bg_white  _pd_bt_50 _pd_tp_50 pb-5">
            <div class="container">
                <article class="post-type-{{post.post_type}} _pd_bt_25" id="post-{{post.ID}}">
                    <section class="_article_content">
                        <h2 class="text-uppercase  services-h2">
                            {{conditions_particulieres.titre}}
                        </h2>
                        <div class="_article_body">
                            {{conditions_particulieres.description}}
                        </div>
                    </section>
                </article>
            </div>
        </div><!-- /content-wrapper -->
    {% endif %}
</div>
{# <script type="text/javascript" src="{{ site.theme.link }}/js/montpellier.js"></script>
<script type="text/javascript" src="{{ site.theme.link }}/js/lille.js"></script> #}
<script type="text/javascript">
var latMon = 43.61500549316406;
var lonMon = 3.824946641921997;
var latLil = 50.622528076171875;
var lonLil = 3.044933319091797;
window.addEventListener("load", function() {
    var mapid = L.mapbox.map('mapidv1')
        .setView([latMon, lonMon], 20)
        .addLayer(L.mapbox.styleLayer('mapbox://styles/mapbox/satellite-streets-v11'))
    // .addLayer(L.mapbox.styleLayer('mapbox://styles/mapbox/streets-v11'))
    ;

    var mapidv2 = L.mapbox.map('mapidv2')
        .setView([latLil, lonLil], 20)
        .addLayer(L.mapbox.styleLayer('mapbox://styles/mapbox/satellite-streets-v11'))
    // .addLayer(L.mapbox.styleLayer('mapbox://styles/mapbox/streets-v11'))
    ;
    var greenIcon = L.icon({
        iconUrl: '{{site.theme.link}}/images/_map/localization_offre.svg',
        iconSize: [35, 90],
    });


    L.marker([latMon, lonMon], { icon: greenIcon }).bindTooltip("Esso", { permanent: false, direction: 'right' }).addTo(mapid);
    L.marker([latLil, lonLil], { icon: greenIcon }).bindTooltip("Esso", { permanent: false, direction: 'right' }).addTo(mapidv2);
});
</script>
{% endblock %}